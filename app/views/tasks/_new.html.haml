
= simple_form_for([@user, Task.new], :html => {:class => 'form-horizontal' }) do |f|
  = f.input :date_to_be_completed, as: :date, start_year: Date.today.year, end_year: Date.today.year + 5
  = f.input :description, as: :text, input_html: {rows: 5, cols: 75}, html: {width: "175px"}
  = f.button :submit  
